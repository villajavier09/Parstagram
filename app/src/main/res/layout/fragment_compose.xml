<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ComposeFragment">

    <ProgressBar
        android:id="@+id/pbLoading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="37dp"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/postDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint='"Describe your picture"'
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:inputType="textPersonName"
      />

    <ImageView
        android:id="@+id/image"
        android:layout_below="@id/postDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:visibility="invisible"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/takePictureButton"
        tools:srcCompat="@tools:sample/avatars" />
    <Button
        android:id="@+id/postPictureButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Post Picture"
        />
    <Button
        android:id="@+id/takePictureButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/postPictureButton"
        android:layout_centerHorizontal="true"
        android:text="Take Picture"
         />

</RelativeLayout>